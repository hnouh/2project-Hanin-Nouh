	<!--Custom styles-->
<%= stylesheet_link_tag "homeStyle.css" %>


	<title>Anime App</title>
	<meta charset="UTF-8">
	<meta name="description" content="EndGam Gaming Magazine Template">
	<meta name="keywords" content="endGam,gGaming, magazine, html">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- Favicon -->
	<link href="img/favicon.ico" rel="shortcut icon"/>

	<!-- Google Font -->
	<link href="https://fonts.googleapis.com/css?family=Roboto:400,400i,500,500i,700,700i,900,900i" rel="stylesheet">


	<!-- Stylesheets -->
	<%= stylesheet_link_tag "bootstrap.min.css"%>
	<%= stylesheet_link_tag  "font-awesome.min.css"%>
	<%= stylesheet_link_tag "slicknav.min.css"%>
	<%= stylesheet_link_tag  "owl.carousel.min.css"%>
	<%= stylesheet_link_tag "magnific-popup.css"%>
	<%= stylesheet_link_tag "animate.css"%>

	<!-- Main Stylesheets -->
	<%= stylesheet_link_tag href="homeStyle2.css"%>


	<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
	  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->

</head>

<body>

	<!-- Header section -->
	<header class="header-section">
  
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
  
		<div class="header-warp">
			<div class="header-bar-warp d-flex">
				<!-- site logo -->
				<a href="/pages/home" class="site-logo">
					<img src="/assets/logo.png" alt="">
				</a>
      	<nav class="top-nav-area w-100">

<div class="user-panel">
  <% if studio_signed_in? %>
  <div style="color:white;">
      Logged in as  <strong ><%= current_studio.email %></strong>
  </div>
    <%= link_to 'Edit profile', edit_studio_registration_path %> / 
    <%= link_to "Sign out", destroy_studio_session_path, method: :delete %> /
    <%= link_to "Edit our animes", animes_path  %>

  <% else %>
    <%= link_to "Sign in", new_studio_session_path %> /
    <%= link_to "Sign up", new_studio_registration_path  %>
  <% end %>
</div>

					<!-- Menu -->
					<ul class="main-menu primary-menu">
						<li><%= link_to "Home" , href="/pages/home"%></li>
                       	<li><%= link_to "All anime" , href="/pages/allAnime"%></li>
						<li><%= link_to "Movies" , href="/pages/Movie"%></li>
						<li><%= link_to "Series" , href="/pages/Series"%></li>
					</ul>
				</nav>
			</div>
		</div>
    
	</header>
	<!-- Header section end -->
  </body>
</html>