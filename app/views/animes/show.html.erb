	<title>Anime App</title>
	<meta charset="UTF-8">
	<meta name="description" content="EndGam Gaming Magazine Template">
	<meta name="keywords" content="endGam,gGaming, magazine, html">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- Favicon -->
	<link href="img/favicon.ico" rel="shortcut icon"/>

	<!-- Google Font -->
	<link href="https://fonts.googleapis.com/css?family=Roboto:400,400i,500,500i,700,700i,900,900i" rel="stylesheet">


	<!-- Stylesheets -->
	<%= stylesheet_link_tag "bootstrap.min.css"%>
	<%= stylesheet_link_tag  "font-awesome.min.css"%>
	<%= stylesheet_link_tag "slicknav.min.css"%>
	<%= stylesheet_link_tag  "owl.carousel.min.css"%>
	<%= stylesheet_link_tag "magnific-popup.css"%>
	<%= stylesheet_link_tag "animate.css"%>

	<!-- Main Stylesheets -->
	<%= stylesheet_link_tag href="homeStyle2.css"%>


	<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
	  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->

</head>
<body>

<br><br>
<h1><%=@anime.name%> informations</h1>

<div class="row">
    <div class="col-xs-6 col-md-3">
<p>
<% if @anime.image_url %>
<%= image_tag @anime.image_url , size: "250x300", alt: "Anime Image", class:"thumbnail"%>
<% end %>
<% if current_studio %>
          <% if current_studio.id==@anime.studio.id %>
          <a class="glyphicon glyphicon-edit" href="<%= edit_anime_path(@anime) %>" > </a> 
          <a class="glyphicon glyphicon-trash" data-confirm="Are you sure you want to delete <%= @anime.name%>?" data-method="delete" href="/animes/<%= @anime.id %>" rel="nofollow"></a>
          <% end %>
<% end %>
</p>
    <div class="thumbnail">
      <p> Studio: <%= @anime.studio.studioname %></p>
      <p> Type: <%= @anime.category %></p>
      <p> Aired year: <%= @anime.aired_year %></p>
      <p> Duration: <%= @anime.duration %></p>
      <p> Episode: <%= @anime.episodes %></p> 
    </div>
  </div>
</div>

<h1><%= @anime.name %> characters</h1>


<% if current_studio %>
  <% if current_studio.id==@anime.studio.id %>
  <%= link_to "New Character", new_character_path(:anime_id => @anime.id), { :class => "btn btn-primary btn-lg" } %>
  <% end %>
<% end %>

<br><br>
<div class="row">

<% @characters.each do |character| %>
    <div class="col-xs-6 col-md-3">

<p>  

<% if character.pic_url %>
  <%= image_tag character.pic_url , size: "250x300", alt: "Character Picture", class:"thumbnail"%>
<% end %>

<% if current_studio %>
    <% if current_studio.id==@anime.studio.id %>
      <a class="glyphicon glyphicon-edit" href="<%= edit_character_path(character) %>" ></a> 
      <a class="glyphicon glyphicon-trash" data-confirm="Are you sure you want to delete <%= character.name %>?" data-method="delete" href="/characters/<%= character.id %>" rel="nofollow"></a>
    <% end %>
  <% end %>

</p>

<div class="thumbnail">
<p>Name: <%= character.name %></p>
<p>Gender: <%= character.gender %></p>
<p>Birth year: <%= character.birth_year %><p>
</div>   
</div>   

<% end %>
</div>   


</body>
</html>